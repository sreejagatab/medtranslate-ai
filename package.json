{
  "name": "medtranslate-ai",
  "version": "1.0.0",
  "description": "Real-time medical translation system using AWS Generative AI and Edge Computing",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:edge": "node scripts/run-edge-tests.js",
    "test:edge:unit": "jest tests/unit/edge-*.test.js",
    "test:edge:integration": "node scripts/run-edge-integration-tests.js",
    "test:edge:performance": "node scripts/run-edge-performance-tests.js",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "node scripts/run-edge-performance-tests.js",
    "lint": "eslint .",
    "deploy:backend": "cd backend && npm run deploy",
