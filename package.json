    "url": "https://github.com/your-org/medtranslate-ai/issues"
  },
  "homepage": "https://github.com/your-org/medtranslate-ai#readme",
  "devDependencies": {
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "supertest": "^7.1.0"
  },
  "workspaces": [
    "backend",
    "edge",
    "frontend/provider-app",
    "frontend/patient-app"
  ],
